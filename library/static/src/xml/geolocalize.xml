<?xml version="1.0" encoding="UTF-8"?>
<templates id="geolocalize_template" xml:space="preserve">

    <t t-name="library.GeolocalizeButton">
        <button type="button" class="btn btn-primary o_geolocalize">Geolocalize</button>
        <button type="button" class="btn btn-primary o_pay">Pay Amount Owed</button>
    </t>
    <t t-name="library.systray_input">
        <li  class="o_library_systray_item">
            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" title="Search by id" href="#">
                <i class="fa fa-search"></i>
            </a>
            <ul class="o_library_systray_dropdown dropdown-menu" role="menu" style="{width: 500px;}">
                 <li>
                    <div>
                        <input placeholder="Customer id" class="o_input" name="partner_id" type="text"/>
                    </div>
                </li>
            </ul>
            <!-- <input placeholder="Customer id" class="o_input" id="test" name="partner_id" type="text"/> -->
        </li>
    </t>
    


