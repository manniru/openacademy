<odoo>
    <template id="rental_page_template">
        <t t-call="website.layout">
            <t t-set="title">Library</t>
            <div class="oe_structure">
                <div class="container">                    
                        <t t-foreach="books" t-as="book">
                            <div>
                                <p><span t-field="book.name"/></p>
                                <button><a t-attf-href="/library/rentals/{{book.id}}">Rent</a></button>
                            </div>
                        </t>                    
                </div>
            </div>
        </t>
    </template>

    <template id="rental_page_form_template">
        <t t-call="website.layout">
            <t t-set="title">Library</t>
            <div class="oe_structure">
                <div class="container">                                           
                    <h1><span t-field="book.name"/></h1>
                    <div>
                        <form method="POST" data-success-page="/library/rentals">
                            <input type="date" name="rental_date" value="{{rental_date}}"/>
                            <input type="date" name="return_date" value="{{return_date}}"/>

                            <input type="submit" value="Submit"/>
                        </form>
                    </div>                   
                </div>
            </div>
        </t>
    </template>
</odoo>