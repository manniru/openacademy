<odoo>
    <record id="tree_all_courses" model="ir.ui.view">
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="responsible_name"/>    
            </tree>
        </field>
    </record>

    <record id="form_all_courses" model="ir.ui.view">
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form>
                <group name="my_course">
                    <field name="name"/>
                    <field name="user_id"/>
                </group>
                
            </form>
        </field>
    </record>
</odoo>