<odoo>
    <template id="session_invite_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-foreach="doc.student_ids" t-as="s">
                    <t t-call="web.internal_layout">
                        <div class="page">
                            <div class="oe_structure">
                                <h2>Hello <span t-field="s.name" /></h2>
                                <p>Here is an invitation to the session <span t-field="doc.session_id.name"/></p>
                            </div>
                            <img t-att-src="'/report/barcode/QR/%s' % 'My text in qr code'"/>
                        </div>
                    </t>
                  
                </t>
            </t>
        </t>
       
    </template>
</odoo>